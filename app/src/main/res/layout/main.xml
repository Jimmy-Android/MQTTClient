            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/light_cc"
                android:layout_centerHorizontal="true"
                android:text="AID:CCCCCC" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout9"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/relativeLayout8" >

            <ImageView
                android:id="@+id/light_b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/light_off"
                android:clickable="true"
                android:tag="off" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/light_b1"
                android:layout_centerHorizontal="true"
                android:text="AID:BBBBBBBBBBB1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout10"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/relativeLayout9" >

            <ImageView
                android:id="@+id/light_b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/light_off"
                android:clickable="true"
                android:tag="off" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/light_b2"
                android:layout_centerHorizontal="true"
                android:text="AID:BBBBBBBBBBB2" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        >

        <RelativeLayout
            android:id="@+id/relativeLayout12"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
           >

            <ImageView
                android:id="@+id/all_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tem_off_default"
                android:clickable="true"
                android:tag="off" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/all_on"
                android:layout_centerHorizontal="true"
                android:text="全开" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout13"
            android:layout_width="130dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/relativeLayout12">

            <ImageView
                android:id="@+id/all_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tem_off_default"
                android:clickable="true"
                android:tag="off"
                android:layout_marginTop="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/all_off"
                android:layout_centerHorizontal="true"
