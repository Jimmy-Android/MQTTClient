<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"

    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/rl0"
            android:layout_width="wrap_content"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/tem_switch_9001_3049"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:background="@drawable/tem_off_default"
                android:clickable="true"
                android:tag="off" />

            <TextView
                android:id="@+id/ther0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="9001:1711973049" />

            <ImageView
                android:id="@+id/temperture_9001_3049"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tem_switch_9001_3049"
                android:background="@drawable/num_25" />

            <ImageView
                android:id="@+id/temperture_unit_iv0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/temperture_9001_3049"
                android:background="@drawable/air_du" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/rl0">

            <ImageView
                android:id="@+id/tem_switch_11001_8916"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:background="@drawable/tem_off_default"
                android:clickable="true"
                android:tag="off" />

            <TextView
                android:id="@+id/tem_11001_8916"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="11001:1695338916" />

            <ImageView
                android:id="@+id/temperture_11001_8916"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@id/tem_switch_11001_8916"
                android:background="@drawable/num_25" />

            <ImageView
                android:id="@+id/temperture_unit_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/temperture_11001_8916"
                android:background="@drawable/air_du" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <RelativeLayout
            android:id="@+id/light_1_ly"
            android:layout_width="130dp"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/light_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/light_off"
                android:clickable="true"
                android:tag="off" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/light_img"
                android:layout_centerHorizontal="true"
                android:text="9001:1711282332" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/light_2_ly"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:layout_toRightOf="@id/light_1_ly">

            <ImageView
                android:id="@+id/light_9001_2436"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:background="@drawable/light_off"
                android:clickable="true"
                android:tag="off" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/light_9001_2436"
                android:layout_centerHorizontal="true"
                android:text="9001:1711282436" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/light_3_ly"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/light_2_ly">

            <ImageView
                android:id="@+id/light_11001_2858"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:background="@drawable/light_off"
                android:clickable="true"
                android:tag="off" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/light_11001_2858"
                android:layout_centerHorizontal="true"
                android:text="11001:1711282858" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/light_4_ly"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/light_3_ly">


            <ImageView
                android:id="@+id/light_11001_1711282799"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:background="@drawable/light_off"
                android:clickable="true"
                android:tag="off" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/light_11001_1711282799"
                android:layout_centerHorizontal="true"
                android:text="11001:1711282799" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout11"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/rl2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" >

        <RelativeLayout
            android:id="@+id/relativeLayout7"
            android:layout_width="130dp"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/light_bb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/light_off"
                android:clickable="true"
                android:tag="off" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/light_bb"
                android:layout_centerHorizontal="true"
                android:text="AID:BBBBBB" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout8"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/relativeLayout7" >

            <ImageView
                android:id="@+id/light_cc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/light_off"
