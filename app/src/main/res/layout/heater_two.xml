<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/heater_bg">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/bg_1">
        <LinearLayout
            android:id="@+id/screen"
            android:layout_width="280dp"
            android:layout_marginTop="42dp"
            android:layout_gravity="center"
            android:background="#383635"
            android:orientation="horizontal"
            android:layout_height="140dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="42dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/shower"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/shower_default"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="6dp"
                    />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="6dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="24dp">
                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="103dp"
                    android:layout_height="94dp"
                    android:text="30"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="80sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/fire"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/fire_default"
                    />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="6dp"
                    />
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/tem_default"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/decrease"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/decrease"/>
            <ImageButton
                android:id="@+id/switch_on"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="36dp"
                android:background="@drawable/switc"/>
            <ImageButton
                android:id="@+id/add"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="36dp"
                android:background="@drawable/add"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>