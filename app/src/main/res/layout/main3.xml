<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"

    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/rl0"
            android:layout_width="wrap_content"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/tem_switch_9001_3049"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:background="@drawable/tem_off_default"
                android:clickable="true"
                android:tag="off" />

            <TextView
                android:id="@+id/ther0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="9001:1711973049" />

            <ImageView
                android:id="@+id/temperture_9001_3049"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tem_switch_9001_3049"
                android:background="@drawable/num_25" />

            <ImageView
                android:id="@+id/temperture_unit_iv0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/temperture_9001_3049"
                android:background="@drawable/air_du" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/rl0">

            <ImageView
                android:id="@+id/tem_switch_11001_8916"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:background="@drawable/tem_off_default"
                android:clickable="true"
                android:tag="off" />

            <TextView
                android:id="@+id/tem_11001_8916"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="11001:1695338916" />

            <ImageView
                android:id="@+id/temperture_11001_8916"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@id/tem_switch_11001_8916"
                android:background="@drawable/num_25" />

            <ImageView
                android:id="@+id/temperture_unit_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/temperture_11001_8916"
                android:background="@drawable/air_du" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:id="@+id/relativeLayout14">

        <RelativeLayout
            android:id="@+id/relativeLayout12"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/all_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tem_on_default"
                android:clickable="true"
                android:tag="off" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/all_on"
                android:layout_centerHorizontal="true"
                android:text="全开" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout13"
            android:layout_width="130dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/relativeLayout12">

            <ImageView
                android:id="@+id/all_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tem_on_default"
                android:clickable="true"
                android:tag="off"
                android:layout_marginTop="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/all_off"
                android:layout_centerHorizontal="true"
                android:text="全关" />
        </RelativeLayout>
    </RelativeLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="200dp"
        android:layout_marginTop="40dp"
        android:numColumns="4"
        android:verticalSpacing="30dp"
        android:id="@+id/gridview"></GridView>

</RelativeLayout>