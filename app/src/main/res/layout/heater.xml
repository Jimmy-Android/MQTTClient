<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/heater_bg">

    <LinearLayout
        android:layout_width="@dimen/width680"
        android:layout_height="@dimen/width504"
        android:layout_marginTop="@dimen/width110"
        android:layout_marginLeft="@dimen/width302"
        android:orientation="vertical"
        android:background="@drawable/bg_1">
        <LinearLayout
            android:id="@+id/screen"
            android:layout_width="@dimen/width528"
            android:layout_marginTop="@dimen/width82"
            android:layout_gravity="center"
            android:background="#383635"
            android:orientation="horizontal"
            android:layout_height="@dimen/width276">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/width84"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/shower"
                    android:layout_width="@dimen/width48"
                    android:layout_height="@dimen/width48"
                    android:background="@drawable/shower_default"/>
                <ImageView
                    android:id="@+id/watering"
                    android:layout_width="@dimen/width48"
                    android:layout_height="@dimen/width48"
                    android:layout_marginTop="@dimen/width12"
                    android:background="@drawable/up_water_default"
                    />
                <ImageView
                    android:id="@+id/smart_home"
                    android:layout_width="@dimen/width48"
                    android:layout_height="@dimen/width48"
                    android:layout_marginTop="@dimen/width12"
                    android:background="@drawable/smart_default"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/width24">
                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="@dimen/width216"
                    android:layout_height="@dimen/width188"
                    android:text="30"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/width160"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/width24"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/fire"
                    android:layout_width="@dimen/width48"
                    android:layout_height="@dimen/width48"
                    android:background="@drawable/fire_default"
                    />
                <ImageView
                    android:id="@+id/ol"
                    android:layout_width="@dimen/width48"
                    android:layout_height="@dimen/width48"
                    android:layout_marginTop="@dimen/width12"
                    android:background="@drawable/ol_default"/>
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="@dimen/width48"
                    android:layout_height="@dimen/width48"
                    android:layout_marginTop="@dimen/width12"
                    android:background="@drawable/tem_default"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/width50"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/decrease"
                android:layout_width="@dimen/width48"
                android:layout_height="@dimen/width48"
                android:background="@drawable/decrease"/>
            <ImageButton
                android:id="@+id/switch_on"
                android:layout_width="@dimen/width48"
                android:layout_height="@dimen/width48"
                android:layout_marginLeft="@dimen/width72"
                android:background="@drawable/switc"/>
            <ImageButton
                android:id="@+id/add"
                android:layout_width="@dimen/width48"
                android:layout_marginLeft="@dimen/width72"
                android:layout_height="@dimen/width48"
                android:background="@drawable/add"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>