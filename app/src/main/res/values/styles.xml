<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="style_image">

        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="style_text_name">
        <item name="android:textSize">30dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="style_temper">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">60dp</item>
        <item name="android:textColor">#535353</item>
    </style>

    <style name="style_temper2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">250dp</item>
        <item name="android:textSize">40dp</item>
        <item name="android:layout_centerVertical">true</item>

        <item name="android:textColor">#535353</item>
    </style>

    <style name="style_text_light">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textSize">25dp</item>

    </style>

    <style name="style_temper_util">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">"â„ƒ"</item>

    </style>

    <style name="style_btn_set_temp">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">#eee</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

</resources>